<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiente"
    tools:context=".InicioSesion">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="278dp"
        android:layout_height="336dp"
        android:layout_gravity="center"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/bordes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/copse"
            android:paddingTop="5dp"
            android:text="Login"
            android:textColor="#000009"
            android:textColorLink="#0FF4C6"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="260dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/fbordes2"
            android:hint="Email"
            android:shadowColor="#EEEEFB"
            android:textColor="#EEEEFB"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="260dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="170dp"
            android:background="@drawable/fbordes2"
            android:hint="ContraseÃ±a"
            android:inputType="textPassword"
            android:textColor="#EEEEFB"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="140dp"
            android:backgroundTint="#000009"
            android:text="Login"
            android:textColor="#EEEEFB" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>